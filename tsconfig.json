{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": false,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "lib": [
    "es2016",
    "dom"
  ],
  "include": [
   "src/**/*"
  ],
  "exclude": [
     "node_modules",
      "**/*.spec.ts"
  ]
}
